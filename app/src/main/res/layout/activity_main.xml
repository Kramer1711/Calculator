<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="com.example.kramer.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:text="CONVER"
                    android:textSize="15dp"
                    android:id="@+id/bt_Conversion"
                    android:onClick="Conversion"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView_Outlet1"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="bottom|right"
                    android:paddingRight="20dp"/>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:id="@+id/textView_Outlet0"
                android:layout_margin="1dp"
                android:gravity="bottom|right"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView_Outlet"
                android:layout_weight="0.6"
                android:gravity="bottom|right"
                android:paddingRight="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="C"
                android:id="@+id/bt_Clear"
                android:textSize="30dp"
                android:onClick="clear"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="←"
                android:id="@+id/bt_Delete"
                android:textSize="30dp"
                android:onClick="delete"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="÷"
                android:id="@+id/bt_Divide"
                android:textSize="30dp"
                android:onClick="ShowTextOperator"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="×"
                android:id="@+id/bt_Mul"
                android:textSize="30dp"
                android:onClick="ShowTextOperator"
                android:layout_margin="1dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:id="@+id/bt_7"
                android:textSize="30dp"
                android:onClick="ShowText"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:id="@+id/bt_8"
                android:textSize="30dp"
                android:onClick="ShowText"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:id="@+id/bt_9"
                android:textSize="30dp"
                android:onClick="ShowText"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:id="@+id/bt_Sub"
                android:textSize="30dp"
                android:onClick="ShowTextOperator"
                android:layout_margin="1dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:id="@+id/bt_4"
                android:textSize="30dp"
                android:onClick="ShowText"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:id="@+id/bt_5"
                android:textSize="30dp"
                android:onClick="ShowText"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:id="@+id/bt_6"
                android:textSize="30dp"
                android:onClick="ShowText"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:id="@+id/bt_Add"
                android:textSize="30dp"
                android:onClick="ShowTextOperator"
                android:layout_margin="1dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1"
                        android:id="@+id/bt_1"
                        android:textSize="30dp"
                        android:onClick="ShowText"
                        android:layout_margin="1dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="2"
                        android:id="@+id/bt_2"
                        android:textSize="30dp"
                        android:onClick="ShowText"
                        android:layout_margin="1dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="3"
                        android:id="@+id/bt_3"
                        android:textSize="30dp"
                        android:onClick="ShowText"
                        android:layout_margin="1dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="0"
                        android:id="@+id/bt_0"
                        android:textSize="30dp"
                        android:onClick="ShowText"
                        android:layout_margin="1dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:text="."
                        android:id="@+id/bt_Point"
                        android:textSize="30dp"
                        android:onClick="ShowTextPoint"
                        android:layout_margin="1dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#eb6020"
                    android:text="="
                    android:id="@+id/bt_Equal"
                    android:textSize="30dp"
                    android:onClick="calc"
                    android:layout_margin="1dp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>


